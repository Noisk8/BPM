// Componente para gestionar LPs (el elemento central de la aplicaci칩n)
const ManageLPs = () => {
  const navigate = useNavigate();
  const [lps, setLPs] = useState<any[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const toast = useToast();

  // Verificar sesi칩n
  useEffect(() => {
    const checkSession = async () => {
      const { data: session } = await supabase.auth.getSession();
      if (!session.session) {
        navigate('/login');
      }
    };
    
    checkSession();
  }, [navigate]);

  // Cargar LPs con informaci칩n anidada de artistas y canciones
  useEffect(() => {
    const fetchLPs = async () => {
      try {
        setLoading(true);
        const { data, error } = await supabase
          .from('albums')
          .select(`
            id, title, release_year,
            artists:artist_id(id, name)
          `)
          .order('title');

        if (error) throw error;
        
        // Obtenemos los LPs con sus datos b치sicos
        const albumsWithSongs = data || [];
        
        // Para cada LP, cargamos sus tracks (canciones)
        for (const album of albumsWithSongs) {
          const { data: songs, error: songsError } = await supabase
            .from('songs')
            .select(`
              id, title, bpm, duration_seconds, key,
              artists:artist_id(id, name)
            `)
            .eq('album_id', album.id)
            .order('title');
            
          if (songsError) throw songsError;
          album.songs = songs || [];
        }
        
        setLPs(albumsWithSongs);
      } catch (err: any) {
        setError(err.message || 'Error al cargar los LPs');
        console.error('Error cargando LPs:', err);
      } finally {
        setLoading(false);
      }
    };

    fetchLPs();
  }, []);

  // Obtener emoji de color para el BPM
  const getBpmColorEmoji = (bpm: number): string => {
    if (bpm >= 70 && bpm < 90) return '游댯'; // Azul
    if (bpm >= 90 && bpm < 100) return '游릭'; // Verde
    if (bpm >= 100 && bpm < 110) return '游리'; // Amarillo
    if (bpm >= 110 && bpm < 120) return '游'; // Naranja
    if (bpm >= 120 && bpm < 130) return '游댮'; // Rojo
    if (bpm >= 130 && bpm <= 140) return '游릮'; // P칰rpura
    return '';
  };
  
  // Formatear duraci칩n en segundos a formato mm:ss
  const formatDuration = (seconds: number): string => {
    const mins = Math.floor(seconds / 60);
    const secs = seconds % 60;
    return `${mins}:${secs < 10 ? '0' : ''}${secs}`;
  };

  return (
    <Box p={5}>
      <Flex justify="space-between" align="center" mb={5}>
        <Heading>Gesti칩n de LPs</Heading>
        <HStack>
          <Button leftIcon={<ArrowBackIcon />} variant="outline" onClick={() => navigate('/admin')}>
            Volver
          </Button>
          <Button leftIcon={<AddIcon />} colorScheme="blue" onClick={() => navigate('/admin/lps/new')}>
            Nuevo LP
          </Button>
        </HStack>
      </Flex>

      {loading ? (
        <Center h="400px">
          <Text>Cargando LPs...</Text>
        </Center>
      ) : error ? (
        <Box p={4} bg="red.100" color="red.800" borderRadius="md" mb={4}>
          <Text>{error}</Text>
        </Box>
      ) : lps.length === 0 ? (
        <Box p={4} bg="gray.100" borderRadius="md">
          <Text>No hay LPs disponibles. 춰A침ade tu primer LP!</Text>
          <Button mt={4} colorScheme="blue" leftIcon={<AddIcon />} onClick={() => navigate('/admin/lps/new')}>
            A침adir primer LP
          </Button>
        </Box>
      ) : (
        <Box>
          {lps.map(lp => (
            <Box key={lp.id} mb={8} p={5} borderWidth="1px" borderRadius="lg" bg="white" shadow="md">
              <Flex justify="space-between" align="flex-start" mb={4}>
                <Box>
                  <Heading size="lg">{lp.title}</Heading>
                  <Text color="gray.600">{lp.artists?.name || 'Artista desconocido/Compilaci칩n'}</Text>
                  <Text color="gray.500" fontSize="sm">{lp.release_year || 'A침o desconocido'}</Text>
                </Box>
                <HStack spacing={2}>
                  <Button
                    size="sm"
                    leftIcon={<EditIcon />}
                    onClick={() => navigate(`/admin/lps/edit/${lp.id}`)}
                  >
                    Editar
                  </Button>
                  <Button
                    size="sm"
                    colorScheme="blue"
                    leftIcon={<AddIcon />}
                    onClick={() => navigate(`/admin/lps/${lp.id}/add-track`)}
                  >
                    A침adir Track
                  </Button>
                </HStack>
              </Flex>

              {/* Lista de tracks */}
              {lp.songs && lp.songs.length > 0 ? (
