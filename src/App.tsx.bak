// Componente de navegaci칩n simple
const SimpleNavbar = () => {
  // Estado para simular la autenticaci칩n
  const [isLoggedIn, setIsLoggedIn] = useState(false);
  const navigate = useNavigate();
  
  // Funci칩n para cerrar sesi칩n
  const handleLogout = () => {
    setIsLoggedIn(false);
    // Guardar estado en localStorage
    localStorage.removeItem('isLoggedIn');
    navigate('/');
  };
  
  // Verificar si est치 logueado al cargar
  useEffect(() => {
    const storedLoginState = localStorage.getItem('isLoggedIn');
    if (storedLoginState === 'true') {
      setIsLoggedIn(true);
    }
  }, []);
  
  return (
    <Flex as="nav" bg="blue.800" color="white" p={4} align="center">
      <Heading size="md">
        <RouterLink to="/">BPM Manager</RouterLink>
      </Heading>
      <Spacer />
      <HStack spacing={4}>
        <Button as={RouterLink} to="/" variant="ghost" colorScheme="whiteAlpha">
          Inicio
        </Button>
        <Button as={RouterLink} to="/songs" variant="ghost" colorScheme="whiteAlpha">
          Canciones
        </Button>
        <Button as={RouterLink} to="/bpm-info" variant="ghost" colorScheme="whiteAlpha">
          Info BPM
        </Button>
        
        {isLoggedIn ? (
          <>
            <Button as={RouterLink} to="/admin" colorScheme="teal">
              Dashboard
            </Button>
            <Button onClick={handleLogout} colorScheme="red" variant="outline">
              Cerrar sesi칩n
            </Button>
          </>
        ) : (
          <Button as={RouterLink} to="/login" colorScheme="green">
            Iniciar sesi칩n
          </Button>
        )}
      </HStack>
    </Flex>
  )
}

// P치gina principal con los 치lbumes y buscador
const HomePage = () => {
  const navigate = useNavigate();
  const [albums, setAlbums] = useState<any[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [searchQuery, setSearchQuery] = useState("");
  const [searchResults, setSearchResults] = useState<{albums: any[], songs: any[]}>({
    albums: [],
    songs: []
  });
  const [isSearching, setIsSearching] = useState(false);

  // Cargar los 치lbumes de la base de datos
  useEffect(() => {
    const fetchAlbums = async () => {
      try {
        setLoading(true);
        // Consultar los 치lbumes con informaci칩n de artistas
        const { data, error } = await supabase
          .from('albums')
          .select(`
            id, title, release_year, cover_image_url
          `)
          .order('release_year', { ascending: false });

        if (error) throw error;
        
        // Por cada 치lbum, obtener los artistas asociados
        if (data) {
          const albumsWithDetails = await Promise.all(data.map(async (album) => {
            // Obtener los artistas del 치lbum
            const { data: albumArtists } = await supabase
              .from('album_artists')
              .select('artists:artist_id(id, name), is_primary')
              .eq('album_id', album.id);
              
            // Obtener algunas canciones del 치lbum para mostrar BPMs
            const { data: albumSongs } = await supabase
              .from('songs')
              .select('id, title, bpm')
              .eq('album_id', album.id)
              .limit(5);
              
            return {
              ...album,
              artists: albumArtists || [],
              songs: albumSongs || []
            };
          }));
          
          setAlbums(albumsWithDetails);
        } else {
          setAlbums([]);
        }
      } catch (err: any) {
        setError(err.message || 'Error al cargar los 치lbumes');
        console.error('Error cargando 치lbumes:', err);
      } finally {
        setLoading(false);
      }
    };

    fetchAlbums();
  }, []);

  // Funci칩n de b칰squeda
  const handleSearch = async () => {
    if (!searchQuery.trim()) {
      setSearchResults({albums: [], songs: []});
      setIsSearching(false);
      return;
    }
    
    setIsSearching(true);
    try {
      // Buscar 치lbumes que coincidan con la consulta
      const { data: albumsData, error: albumsError } = await supabase
        .from('albums')
        .select(`id, title, release_year, cover_image_url`)
        .ilike('title', `%${searchQuery}%`);
        
      if (albumsError) throw albumsError;
      
      // Buscar canciones que coincidan con la consulta
      const { data: songsData, error: songsError } = await supabase
        .from('songs')
        .select(`
          id, title, bpm,
          artists:artist_id(id, name),
          albums:album_id(id, title)
        `)
        .ilike('title', `%${searchQuery}%`);
        
      if (songsError) throw songsError;
      
      setSearchResults({
        albums: albumsData || [],
        songs: songsData || []
      });
    } catch (err: any) {
      console.error('Error en la b칰squeda:', err);
    } finally {
      setIsSearching(false);
    }
  };

  // Funci칩n para obtener el emoji de color seg칰n el BPM
  const getBpmColorEmoji = (bpm: number): string => {
    if (bpm >= 70 && bpm < 90) return '游댯'; // Azul
    if (bpm >= 90 && bpm < 100) return '游릭'; // Verde
    if (bpm >= 100 && bpm < 110) return '游리'; // Amarillo
    if (bpm >= 110 && bpm < 120) return '游'; // Naranja
    if (bpm >= 120 && bpm < 130) return '游댮'; // Rojo
    if (bpm >= 130 && bpm <= 140) return '游릮'; // P칰rpura
    return '';
  };

  // Formatear duraci칩n en segundos a formato mm:ss
  const formatDuration = (seconds: number): string => {
    const mins = Math.floor(seconds / 60);
    const secs = seconds % 60;
    return `${mins}:${secs.toString().padStart(2, '0')}`;
  };

  // Funci칩n para obtener el artista principal del 치lbum
  const getPrimaryArtist = (artists: any[]) => {
    const primaryArtist = artists.find(a => a.is_primary);
    return primaryArtist ? primaryArtist.artists.name : 
           artists.length > 0 ? artists[0].artists.name : 'Artista desconocido';
  };

  return (
    <Box>
      <VStack spacing={6} align="stretch">
        <Box>
          <Heading as="h1" size="xl" mb={4}>BPM Music Manager</Heading>
          <Text fontSize="lg" color="gray.600" mb={6}>
            Explora tu colecci칩n de m칰sica organizada por BPM.
          </Text>
          
          {/* Buscador */}
          <FormControl mb={8}>
            <Flex>
              <Input 
                placeholder="Buscar 치lbumes o canciones..."
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                onKeyDown={(e) => e.key === 'Enter' && handleSearch()}
                size="lg"
                borderRadius="md"
                mr={2}
              />
              <Button 
                colorScheme="blue" 
                onClick={handleSearch} 
                isLoading={isSearching}
                size="lg"
              >
                Buscar
              </Button>
            </Flex>
          </FormControl>
        </Box>
        
        {/* Resultados de b칰squeda */}
        {searchQuery && (
          <Box mb={8}>
            {isSearching ? (
              <SearchResultsSkeleton />
            ) : (
              <>
                <Heading size="md" mb={4}>Resultados de b칰squeda para "{searchQuery}"</Heading>
                
                {searchResults.albums.length > 0 && (
              <Box mb={6}>
                <Heading size="sm" mb={3}>츼lbumes encontrados ({searchResults.albums.length})</Heading>
                <SimpleGrid columns={[1, 2, 3, 4]} spacing={6}>
                  {searchResults.albums.map(album => (
                    <Box 
                      key={album.id} 
                      borderWidth="1px" 
                      borderRadius="lg" 
                      overflow="hidden"
                      transition="transform 0.3s"
                      _hover={{ transform: 'translateY(-5px)', shadow: 'md' }}
                      onClick={() => navigate(`/album/${album.id}`)}
                      cursor="pointer"
                    >
                      <Box 
                        height="180px" 
                        bg="gray.200" 
                        bgImage={album.cover_image_url ? `url(${album.cover_image_url})` : 'none'}
                        bgSize="cover"
                        bgPosition="center"
                      >
                        {!album.cover_image_url && (
                          <Center height="100%">
                            <Text fontSize="5xl">游</Text>
                          </Center>
                        )}
                      </Box>
                      <Box p={4}>
                        <Heading size="sm" isTruncated>{album.title}</Heading>
                        <Text color="gray.600" fontSize="sm">
                          {album.release_year}
                        </Text>
                      </Box>
                      </Box>
                    ))}
                  </SimpleGrid>
                </Box>
              )}
              
              {searchResults.songs.length > 0 && (
                <Box mb={6}>
                  <Heading size="sm" mb={3}>Canciones encontradas ({searchResults.songs.length})</Heading>
                  <Box as="table" width="100%" borderWidth="1px" borderRadius="md">
                    <Box as="thead" bg="gray.100">
                      <Box as="tr">
                        <Box as="th" p={3} textAlign="left">T칤tulo</Box>
                        <Box as="th" p={3} textAlign="left">BPM</Box>
                        <Box as="th" p={3} textAlign="left">츼lbum</Box>
                        <Box as="th" p={3} textAlign="left">Artista</Box>
                      </Box>
                    </Box>
                    <Box as="tbody">
                      {searchResults.songs.map(song => (
                        <Box 
                          as="tr" 
                          key={song.id}
                          _hover={{ bg: 'gray.100' }}
                          cursor="pointer"
                        >
                          <Box as="td" p={3}>{song.title}</Box>
                          <Box as="td" p={3}>
                            <Flex align="center">
                              <Text mr={2}>{song.bpm}</Text>
                              {getBpmColorEmoji(song.bpm)}
                            </Flex>
                          </Box>
                          <Box as="td" p={3}>{song.albums.title}</Box>
                          <Box as="td" p={3}>{song.artists.name}</Box>
                        </Box>
                      ))}
                    </Box>
                  </Box>
                </Box>
              )}
              
              {searchResults.albums.length === 0 && searchResults.songs.length === 0 && (
                <Box p={4} bg="gray.100" borderRadius="md">
                  <Text>No se encontraron resultados para "{searchQuery}"</Text>
                </Box>
              )}
            </Box>
          )}
        </Box>
      )}
      
      {/* Lista de 치lbumes */}
      {!searchQuery && (
        <Box>
          <Flex align="center" justify="space-between" mb={4}>
            <Heading size="md">칔ltimos 치lbumes a침adidos</Heading>
          </Flex>
          
          {loading ? (
            <AlbumSkeletonGrid count={8} />
          ) : error ? (
            <Box p={4} bg="red.100" color="red.800" borderRadius="md" mb={4}>
              <Text>{error}</Text>
            </Box>
          ) : albums.length === 0 ? (
            <Box p={4} bg="gray.100" borderRadius="md">
              <Text>No hay 치lbumes disponibles.</Text>
            </Box>
          ) : (
            <SimpleGrid columns={[1, 2, 3, 4]} spacing={6}>
              {albums.map(album => (
                <Box 
                  key={album.id} 
                  borderWidth="1px" 
                  borderRadius="lg" 
                  overflow="hidden"
                  transition="transform 0.3s"
                  _hover={{ transform: 'translateY(-5px)', shadow: 'md' }}
                  onClick={() => navigate(`/album/${album.id}`)}
                  cursor="pointer"
                >
            {searchResults.albums.length === 0 && searchResults.songs.length === 0 && (
              <Box p={4} bg="gray.100" borderRadius="md">
                <Text>No se encontraron resultados para "{searchQuery}"</Text>
              </Box>
            )}
          </Box>
        )}
        
        {/* Lista de 치lbumes */}
        {!searchQuery && (
          <Box>
            <Flex align="center" justify="space-between" mb={4}>
              <Heading size="md">칔ltimos 치lbumes a침adidos</Heading>
            </Flex>
            
            {loading ? (
              <AlbumSkeletonGrid count={8} />
            ) : error ? (
              <Box p={4} bg="red.100" color="red.800" borderRadius="md" mb={4}>
                <Text>{error}</Text>
              </Box>
            ) : albums.length === 0 ? (
              <Box p={4} bg="gray.100" borderRadius="md">
                <Text>No hay 치lbumes disponibles.</Text>
              </Box>
            ) : (
              <SimpleGrid columns={[1, 2, 3, 4]} spacing={6}>
                {albums.map(album => (
                  <Box 
                    key={album.id} 
                    borderWidth="1px" 
                    borderRadius="lg" 
                    overflow="hidden"
                    transition="transform 0.3s"
                    _hover={{ transform: 'translateY(-5px)', shadow: 'md' }}
                    onClick={() => navigate(`/album/${album.id}`)}
                    cursor="pointer"
                  >
                    <Box 
                      height="180px" 
